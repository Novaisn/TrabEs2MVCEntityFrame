@model LoginModel

@{
    ViewData["Title"] = "Login";
    var hasError = ViewData["HasError"] as bool? ?? false;
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<h1>Login</h1>

<hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Nome de Utilizador</label>
                    <input asp-for="Email" type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Palavra-Passe</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        
            @if (hasError)
            {
                <p style="color: red;">
                    The introduced credentials are invalid
                </p>
            }
        </div>
<div>
        <a asp-action="registou">Registo</a>
    </div>
    </div>
    
