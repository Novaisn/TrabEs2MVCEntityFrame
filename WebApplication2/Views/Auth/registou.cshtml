@model WebApplication2.Entities.Utilizador

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Registo</h2>

<div class="row">
<div class="col-md-4">
    <form asp-action="Registar" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Nome</label>
            <input asp-for="Nome" type="text" class="form-control"/>
            <span asp-validation-for="Nome" class="text-danger"></span>
            
        </div>
        <div class="form-group">
            <label class="control-label">Nif</label>
            <input asp-for="Nif" type="number"class="form-control"/>
            <span asp-validation-for="Nif" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Ncc</label>
            <input asp-for="Ncc" type="text" class="form-control"/>
            <span asp-validation-for="Ncc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Rua</label>
            <input asp-for="Rua" type="text" class="form-control"/>
            <span asp-validation-for="Rua"class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">NPorta</label>
            <input asp-for="Nporta"  type="text" class="form-control"/>
            <span asp-validation-for="Nporta" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">UserName</label>
            <input asp-for="Username" type="text" class="form-control"/>
            <span asp-validation-for="Nporta" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Pass</label>
            <input asp-for="Pass" type="password" class="form-control"/>
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>
        <div>
            <label class="control-label">CodPostal</label>
            <input asp-for="Codpostal" type="text" class="form-control"/>
            <span asp-validation-for="Codpostal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Criar utilizador" class="btn btn-primary"/>
        </div>
    </form>
</div>
</div>
